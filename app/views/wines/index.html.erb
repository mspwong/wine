<h1>Wine Listing</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Varietal</th>
    <th>Vintage</th>
    <th>Region</th>
    <th>Item No</th>
    <th>Tags</th>
  </tr>

<% @wines.each do |wine| %>
  <tr>
    <td><%=h wine.id %></td>
    <td><%=h wine.name %></td>
    <td><%=h wine.varietal %></td>
    <td><%=h wine.vintage %></td>
    <td><%=h wine.region %></td>
    <td><%=h wine.item_no %></td>
    <% first = true %>
    <td><%=h wine.tags.collect { |t|
        if first
            first = false
            t.name
        else
            " | " + t.name
        end
    } %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
    <td><%= link_to 'Destroy', wine, :confirm => 'Are you sure?', :method => :delete, :style => "color:red;" %></td>
  </tr>
<% end %>
</table>

